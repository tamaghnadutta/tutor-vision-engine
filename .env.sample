# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_KEY=your_secret_api_key_here

# Gemini Configuration
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.5-flash
GEMINI_THINKING_BUDGET=0

# OpenAI Configuration (required for OCR→LLM and some approaches)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o
OPENAI_VISION_MODEL=gpt-4o

# Approach Selection (Assignment Requirements)
ERROR_DETECTION_APPROACH=hybrid  # Options: "ocr_llm", "vlm_direct", "hybrid"

# Model Provider Selection
MODEL_PROVIDER=auto  # Options: "gemini", "openai", or "auto"

# OCR→LLM Configuration
OCR_PROVIDER=gpt-4o  # Model to use for OCR step
REASONING_PROVIDER=auto  # Model for reasoning from OCR text: "gemini", "openai", "auto"

# Database Configuration
DATABASE_URL=sqlite:///./data/requests.db

# Observability
LOG_LEVEL=INFO
STRUCTURED_LOGS=true

# Performance Settings
REQUEST_TIMEOUT=30
MAX_CONCURRENT_REQUESTS=10
MAX_IMAGE_SIZE_MB=5

# Evaluation Settings
EVAL_DATASET_PATH=./data/eval_dataset.json
EVAL_RESULTS_PATH=./data/eval_results/